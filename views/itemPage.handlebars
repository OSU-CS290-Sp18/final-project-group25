<div class= "name-container">
	<p>
		{{name}}
	</p>
</div>

<div class="photos-container">
	
	{{#each photos}}
		{{> photo}}
	{{each}}

</div>

<main class="review-container">
	

	{{#each reviews}}
		{{> review}}
	{{each}}

</main>


<button type="button" id="create-review-button"><i class="fas fa-plus"></i></button>

<div id="modal-backdrop" class="hidden"></div>
<div id="create-review-modal" class="hidden">
  <div class="modal-dialog">

    <div class="modal-header">
      <h3>Write a Review</h3>
      <button type="button" class="modal-close-button">&times;</button>
    </div>

    <div class="modal-body">
      <div class="review-input-element">
        <label for="review-text-input">Review Content</label>
        <textarea id="review-text-input"></textarea>
      </div>
      <div class="review-input-element">
        <label for="review-attribution-input">Author</label>
        <input type="text" id="review-attribution-input">
      </div>
    </div>

    <div class="modal-footer">
      <button type="button" class="modal-cancel-button">Cancel</button>
      <button type="button" class="modal-accept-button">Create Review</button>
    </div>

  </div>
</div>